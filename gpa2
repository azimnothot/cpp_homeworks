#include <iostream>
using namespace std;

int main() {
	float grades[4], hours[4], numerator = 0, denominator = 0, gpa = 0;

	
	
	for (int i = 1; i <= 5; i++) {
		cout << "Enter grade of " << i<< " subject: ";
		cin >> grades[i];

		cout << "Enter hour of " << i << " subject: ";
		cin >> hours[i];

		numerator += grades[i] * hours[i];
		denominator += hours[i];
	}

	gpa = numerator / denominator;
	
	cout << "\n\nGPA : " << gpa << endl;

	system("pause");
	return 0;
}
